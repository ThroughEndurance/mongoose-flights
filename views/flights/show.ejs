<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Details</title>
</head>
<body>

    <section id="show-page">
        <div>Airline: </div>
        <div><%= flight.airline %></div>
        <div>Airport: </div>
        <div><%= flight.airport %></div>
        <div>Flight Number: </div>
        <div><%= flight.flightNo %></div>
        <div>Departure Date: </div>
        <div><%= flight.departs %></div>
        <div> Tickets:</div>
        <ul>
          <%- flight.passengers.map(p => 
            `<li>${p.seat} ${p.price} ${p.flight}</li>`
          ).join('') %>
        </ul>

      </section>
    
    <br><br><h2>Destinations</h2>

    <form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
      <label>Destinations:</label>
      <textarea name="airport"></textarea>
      <label>Arrival Date:
          <input type="date" name="arrival">
        </label><br>
        <input type="submit" value="Add destination">
    </form>
    

        <table>
          <thead>
            <tr>
              <th>Destination</th>
              <th>Arrival Date</th>
            </tr>
          </thead>
          <tbody>
            <% flight.destinations.forEach(function(dest) { %>
              <tr>
                <td><%= dest.airport %></td>
                <td><%= dest.arrival %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>

<a href="/<%= flight._id %>/tickets/new">Add New Ticket</a>




</body>
</html>